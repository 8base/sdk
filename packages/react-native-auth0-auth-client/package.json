{
  "name": "@8base/react-native-auth0-auth-client",
  "version": "0.24.0",
  "author": "8base",
  "repository": "https://github.com/8base/sdk",
  "homepage": "https://github.com/8base/sdk/tree/master/packages/react-native-auth0-auth-client#readme",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "build:clean": "rimraf dist",
    "build:ts": "tsc",
    "build": "yarn build:clean && yarn build:ts",
    "watch": "yarn build --watch",
    "doc": "NODE_ENV=test documentation readme",
    "docs": "yarn doc src/index.js --section=ReactNativeAuth0AuthClient",
    "test": "NPM_ENV=test jest"
  },
  "dependencies": {
    "@8base/utils": "^0.24.0",
    "jwt-decode": "^2.2.0",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@types/jwt-decode": "^2.2.1",
    "@types/ramda": "^0.26.9",
    "@types/react-native": "^0.57.60",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "documentation": "^8.0.0",
    "expo": "^32.0.1",
    "flow-copy-source": "^2.0.2",
    "jest": "24",
    "prettier": "^1.16.0",
    "react-native": "https://github.com/expo/react-native/archive/sdk-32.0.0.tar.gz",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.1"
  },
  "peerDependencies": {
    "expo": "^32.0.0",
    "react-native": "https://github.com/expo/react-native/archive/sdk-32.0.0.tar.gz"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.json"
      }
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**",
      "!<rootDir>/**/__tests__/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  },
  "license": "MIT"
}
