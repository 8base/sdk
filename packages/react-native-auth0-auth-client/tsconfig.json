{
  "extends": "../tsconfig.settings.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "noImplicitAny": true,
    "lib": [
      "es2016",
      "esnext.asynciterable",
      "es2016.array.include"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "*": [
        "types/*"
      ]
    }
  }, 
  "exclude": [
    "node_modules/expo/**/*"
  ],
  "include": [
    "src/**/*"
  ]
}
