{
  "name": "@8base/api-token-auth-client",
  "version": "0.26.0",
  "author": "8base",
  "repository": "https://github.com/8base/sdk",
  "homepage": "https://github.com/8base/sdk/tree/master/packages/api-token-auth-client#readme",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "build:clean": "rimraf dist",
    "build:ts": "tsc",
    "build": "yarn build:clean && yarn build:ts",
    "watch": "yarn build --watch",
    "doc": "NODE_ENV=test documentation readme",
    "docs": "yarn doc src/index.js --section=ApiTokenAuthClient",
    "test": "NPM_ENV=test jest"
  },
  "dependencies": {
    "@8base/utils": "^0.26.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "documentation": "^8.0.0",
    "jest": "^23.1.0",
    "jest-localstorage-mock": "^2.2.0",
    "prettier": "^1.16.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.json"
      }
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**",
      "!<rootDir>/**/__tests__/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  },
  "license": "MIT"
}
