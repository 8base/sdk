{
  "name": "@8base/validate",
  "version": "2.6.3",
  "repository": "https://github.com/8base/sdk",
  "homepage": "https://github.com/8base/sdk/tree/master/packages/core/validate",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "build": "../../../bin/build-package.sh",
    "watch": "../../../bin/watch-package.sh",
    "test": "NPM_ENV=test jest"
  },
  "dependencies": {
    "@8base/utils": "^2.6.3",
    "decimal.js": "^10.2.1",
    "ramda": "^0.27.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/ramda": "^0.27.36",
    "jest": "26.6.3",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "<rootDir>/tsconfig.json"
      }
    },
    "setupFiles": [
      "<rootDir>/test/jest.setup.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**",
      "!<rootDir>/**/__tests__/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  },
  "license": "MIT"
}
