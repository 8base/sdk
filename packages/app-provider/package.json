{
  "name": "@8base/app-provider",
  "version": "0.23.0",
  "repository": "https://github.com/8base/sdk",
  "homepage": "https://github.com/8base/sdk/tree/master/packages/app-provider#readme",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "build:clean": "rimraf dist",
    "build:ts": "tsc",
    "build": "yarn build:clean && yarn build:ts",
    "watch": "yarn build --watch",
    "docs": "NODE_ENV=test documentation readme src/EightBaseAppProvider.js --section=API",
    "test": "NPM_ENV=test jest"
  },
  "peerDependencies": {
    "react": "^16.3.0",
    "react-apollo": "^2.5.0",
    "react-dom": "^16.3.0"
  },
  "dependencies": {
    "@8base/apollo-client": "^0.23.0",
    "@8base/apollo-links": "^0.23.0",
    "@8base/auth": "^0.23.0",
    "@8base/error-codes": "^1.0.5",
    "@8base/table-schema-provider": "^0.23.0",
    "@8base/utils": "^0.23.0",
    "apollo-cache-inmemory": "^1.5.1",
    "apollo-client": "^2.5.1",
    "apollo-link-batch-http": "^1.2.11",
    "apollo-link-error": "^1.1.10",
    "graphql-tag": "^2.9.2",
    "ramda": "^0.26.1",
    "recompose": "0.27.1"
  },
  "devDependencies": {
    "@8base/web-auth0-auth-client": "^0.23.0",
    "@types/graphql": "^0.13.0",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/ramda": "^0.26.8",
    "documentation": "^8.0.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "jest": "24",
    "jest-fetch-mock": "^2.1.0",
    "prettier": "^1.16.4",
    "prop-types": "^15.6.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "graphql": "^0.13.0",
    "react": "^16.8.6",
    "react-apollo": "2.5.2",
    "react-dom": "^16.8.6",
    "typescript": "^3.4.5"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.json"
      }
    },
    "setupFiles": [
      "<rootDir>/test/jest.setup.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**",
      "!<rootDir>/**/__tests__/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  },
  "license": "MIT"
}
