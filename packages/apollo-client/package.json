{
  "name": "@8base/apollo-client",
  "version": "0.26.0",
  "repository": "https://github.com/8base/sdk",
  "homepage": "https://github.com/8base/sdk/tree/master/packages/apollo-client#readme",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "build:clean": "rimraf dist",
    "build:ts": "tsc",
    "build": "yarn build:clean && yarn build:ts",
    "watch": "yarn build --watch",
    "docs": "NODE_ENV=test documentation readme src/index.js --section=EightBaseApolloClient",
    "test": "NPM_ENV=test jest"
  },
  "dependencies": {
    "@8base/apollo-links": "^0.26.0",
    "@8base/utils": "^0.26.0",
    "apollo-cache-inmemory": "^1.5.1",
    "apollo-client": "^2.5.1",
    "apollo-link": "1.2.11",
    "apollo-link-batch-http": "^1.2.11",
    "apollo-link-error": "^1.1.10",
    "graphql": "0.13.0",
    "graphql-tag": "^2.10.0"
  },
  "devDependencies": {
    "@types/graphql": "^14.2.0",
    "@types/jest": "^24.0.13",
    "documentation": "^8.1.2",
    "jest": "24",
    "jest-fetch-mock": "^2.1.0",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.json"
      }
    },
    "setupFiles": [
      "<rootDir>/test/jest.setup.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**",
      "!<rootDir>/**/__tests__/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  },
  "license": "MIT"
}
