{
  "name": "@8base/api-client",
  "version": "0.30.0",
  "repository": "https://github.com/8base/sdk",
  "homepage": "https://github.com/8base/sdk/tree/master/packages/api-client#readme",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "build": "../../bin/build-package.sh",
    "watch": "../../bin/watch-package.sh",
    "docs": "documentation readme src/Client.js --section=API",
    "test": "NODE_ENV=test jest"
  },
  "dependencies": {
    "@8base/error-codes": "^1.0.12",
    "@8base/schema-name-generator": "^0.1.5",
    "@8base/utils": "^0.30.0",
    "filestack-js": "^1.14.6",
    "graphql": "0.13.0",
    "graphql-request": "^1.8.2",
    "graphql-tag": "^2.9.2",
    "node-fetch": "^2.3.0",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "@types/graphql": "^14.2.0",
    "@types/jest": "^24.0.13",
    "@types/nock": "^10.0.3",
    "documentation": "^8.0.0",
    "jest": "^24.8.0",
    "nock": "^9.3.3",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.1",
    "yargs": "^12.0.1"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/test/tsconfig.json"
      }
    },
    "setupFiles": [
      "<rootDir>/test/jest.setup.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**",
      "!<rootDir>/**/__tests__/**"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ]
  },
  "license": "MIT"
}
